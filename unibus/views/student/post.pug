doctype html

html(lang='en')
  head
    include ../includes/head
  body
    .wrapper
      include ../includes/sidebar_student
      .main-panel
        include ../includes/navbar
        .content
          .container-fluid
            .row
              .col-md-12
                .card
                  .card-header
                    h4.card-title 게시물 조회
                  .card-content
                    form
                      fieldset
                        .form-group
                          label.col-sm-2.control-label 제목
                          .col-sm-10
                            p.form-control #{post.title}
                      fieldset
                        .form-group
                          label.col-sm-2.control-label 작성자 / 조회수 / 작성일시
                          .col-sm-3
                            p.form-control #{post.posted_by.name}
                          .col-sm-3
                            p.form-control #{post.views_by.length}회
                          .col-sm-3
                            p.form-control #{post.updateTime.getFullYear()}.#{post.updateTime.getMonth()+1}.#{post.updateTime.getDate()}
                      fieldset
                        .form-group
                          label.col-sm-2.control-label 내용
                          .col-sm-10
                            p.form-control #{post.contents}
                      //fieldset  
                        .form-group
                          label.col-sm-2.control-label
                          .col-sm-10
                            button.btn.btn-info.btn-fill.btn-wd(type='submit') 업로드
                      //첨부파일 나중에 생각.
                      //fieldset
                        .form-group
                          label.col-sm-2.control-label 첨부파일
        include ../includes/footer
    include ../includes/scripts